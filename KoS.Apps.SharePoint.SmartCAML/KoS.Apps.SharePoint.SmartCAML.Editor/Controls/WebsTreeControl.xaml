<UserControl x:Class="KoS.Apps.SharePoint.SmartCAML.Editor.Controls.WebsTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:self="clr-namespace:KoS.Apps.SharePoint.SmartCAML.Model;assembly=KoS.Apps.SharePoint.SmartCAML.Model"
             xmlns:provider="clr-namespace:KoS.Apps.SharePoint.SmartCAML.SharePointProvider;assembly=KoS.Apps.SharePoint.SmartCAML.SharePointProvider"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <TreeView Name="ucLists" MouseDoubleClick="ucLists_MouseDoubleClick">
        <TreeView.Resources>
            <HierarchicalDataTemplate DataType="{x:Type provider:ISharePointProvider}" ItemsSource="{Binding Path=Web.Lists, Mode=OneWay}" >
                <TextBlock Text="{Binding Path=Web.Title, Mode=OneWay}" />
            </HierarchicalDataTemplate>
            <DataTemplate DataType="{x:Type self:SList}">
                <TextBlock Text="{Binding Title}" />
            </DataTemplate>
        </TreeView.Resources>
    </TreeView>
</UserControl>
