<UserControl x:Class="KoS.Apps.SharePoint.SmartCAML.Editor.Controls.QueryFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KoS.Apps.SharePoint.SmartCAML.Editor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel x:Name="ucContainer" Orientation="Horizontal">
        <Button Content="x" Click="RemoveFilterButton_Click" />
        <ComboBox x:Name="ucAndOr" />
        <ComboBox x:Name="ucField" ItemsSource="{Binding Fields}" DisplayMemberPath="InternalName" SelectionChanged="ucField_OnSelectionChanged" />
        
    </StackPanel>
            
</UserControl>
