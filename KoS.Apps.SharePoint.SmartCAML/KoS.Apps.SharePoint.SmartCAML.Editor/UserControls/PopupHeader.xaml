<UserControl x:Class="KoS.Apps.SharePoint.SmartCAML.Editor.UserControls.PopupHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KoS.Apps.SharePoint.SmartCAML.Editor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid Grid.Row="0" Margin="4,4,4,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="14" FontWeight="Bold" Foreground="#FF3E71CB" Margin="6,0,0,0" Text="{Binding Path=Text}" />
        <Button Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}" Click="CloseButton_Click" FontSize="10">✖</Button>
    </Grid>
</UserControl>
