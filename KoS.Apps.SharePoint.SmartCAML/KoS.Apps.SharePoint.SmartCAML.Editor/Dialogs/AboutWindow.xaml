<Window x:Class="KoS.Apps.SharePoint.SmartCAML.Editor.Dialogs.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoS.Apps.SharePoint.SmartCAML.Editor.Dialogs"
        mc:Ignorable="d"
        Title="About  - SmartCAML" Height="138.41" Width="287.417" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" SizeToContent="Height">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="181*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="0" FontWeight="Bold" FontSize="16" Margin="4,0,4,4" >SmartCAML</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,2,0,0">Author:</TextBlock>
        <TextBox   Grid.Column="1" Grid.Row="1" IsReadOnly="True" Margin="4,2,0,2" x:Name="ucAuthor" >Konrad Sikorski</TextBox>
        <TextBlock Grid.Column="0" Grid.Row="2" Margin="0,2,0,0">Version:</TextBlock>
        <TextBox   Grid.Column="1" Grid.Row="2" IsReadOnly="True" Margin="4,2,0,2" x:Name="ucVersion" />
        <Button    Grid.Column="1" Grid.Row="3" Content="GitHub"  Margin="4" Style="{StaticResource LinkButton}" Click="Button_Click"/>
        <Button    Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Content="OK" HorizontalAlignment="Right" Width="100" IsCancel="True" IsDefault="True"/>
    </Grid>
</Window>
